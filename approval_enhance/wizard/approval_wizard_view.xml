<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="model_approval_wizard_form" model="ir.ui.view">
            <field name="name">model.approval.wizard.form</field>
            <field name="model">model.approval.wizard</field>
            <field name="arch" type="xml">
                <form string="审批流">
                    <sheet>
                        <group>
                            <group>
                                <field name="approval_category"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="确认" type="object" default_focus="1" class="btn-primary"/>
                        <button string="取消" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>       

        <record id="action_model_approval_wizard" model="ir.actions.act_window">
            <field name="name">Approval Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model.approval.wizard</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="approval_enhance.model_approval_wizard_form"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
