        <record id="sa_mrp_workcenter_form_view_inherit" model="ir.ui.view">
            <field name="name">sa_mrp_workcenter_form_view_inherit</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
            <field name="arch" type="xml">
                <group name="capacity" position="after">
                    <group string="Work Segment">
                        <field name="worksegment_id" required="1"/>
                    </group>
                    <group string="Equipments">
                        <field name="controller_id_domain" invisible="1" />
                        <field name="masterpc_id" string="MasterPC" required="1"  domain="[('category_name','=','MasterPC')]"/>
                        <field name="hmi_id" string="HMI" required="1" domain="[('category_name','=','HMI')]"/>
                        <field name="controller_id" string="Controller" required="1" domain="controller_id_domain"/>
                    </group>
                </group>
                <xpath expr="//notebook/page[last()]" position="replace">

                </xpath>
            </field>
        </record>

        <record id="sa_mrp_workcenter_tree_view_inherit" model="ir.ui.view">
            <field name="name">sa_mrp_workcenter_tree_view_inherit</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="worksegment_id" />
                </field>
            </field>
        </record>

        <record id="sa_view_mrp_workcenter_search_inherit" model="ir.ui.view">
            <field name="name">sa_view_mrp_workcenter_search_inherit</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.view_mrp_workcenter_search"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="worksegment_id" string="Mrp Worksegment"/>
                </field>
                <xpath expr="//group[1]" position="inside">
                    <filter string="Work Segment" domain="[]" context="{'group_by':'worksegment_id'}"/>
                </xpath>
            </field>
        </record>



