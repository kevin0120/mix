                                    <!--<div><b><field name="name"/><span t-if="record.category_id.raw_value"> (<field name="record.category_id.raw_value"/>)</span></b></div>-->
                                    <div class="mt4">
                                        <div t-if="!record.owner_user_id.raw_value">Unassigned</div>
                                        <div t-if="record.owner_user_id.raw_value"><field name="owner_user_id"/></div>
