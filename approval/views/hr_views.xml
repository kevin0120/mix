<odoo>
  <data>
    <record id="view_employee_form_inherit_approval" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='active_group']" position="after">
                <group string="Agent" name="agent_group">
                  <field name="agent_user_id"/>
                  <field name="agent_start_time"/>
                  <field name="agent_stop_time"/>
                </group>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(hr_contract.act_hr_employee_2_hr_contract)d"
                    class="oe_stat_button"
                    icon="fa-book"
                    type="action">
                    <field name="todo_approval_count" string="Todo Approval" widget="statinfo"/>
                </button>
                <button name="%(hr_contract.act_hr_employee_2_hr_contract)d"
                      class="oe_stat_button"
                      icon="fa-book"
                      type="action">
                      <field name="favorite_request_count" string="Launched Approval" widget="statinfo"/>
                  </button>
            </xpath>
            <xpath expr="//button[@name='toggle_active']" position="before">
               <button  name="toggle_agent_enable"
                        class="oe_stat_button"
                        icon="fa-check-square"
                        type="object"
                        groups="hr.group_hr_user" >
                    <field name="agent_enable" widget="boolean_button"
                           options='{"terminology": {
                                    "string_true": "Agent",
                                    "hover_true": "Non-Agent",
                                    "string_false": "Non-Agent",
                                    "hover_false": "Agent"
                                }}'/>
               </button>
            </xpath>
        </field>
    </record>

  <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">hr.employee.tree</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="agent_user_id"/>
            </field>
        </field>
    </record>

  </data>
</odoo>