<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="base.module_category_approval_management">
            <field name="name">Approval</field>
            <field name="description">Helps you manage your Approval by tracking them, generating plannings, etc...</field>
            <field name="sequence">30</field>
        </record>

        <record id="group_approval_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_approval_management"/>
        </record>

        <record id="group_approval_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_approval_management"/>
            <field name="implied_ids" eval="[(4, ref('group_approval_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
    </data>
    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('approval.group_approval_manager'))]"/>
        </record>

        <record model="ir.rule" id="approval_approval_manager_rule">
            <field name="name">Approval: approval manager: see all</field>
            <field name="model_id" ref="model_approval_approval"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('approval.group_approval_manager'))]"/>
        </record>

        <record model="ir.rule" id="approval_visibility_rule">
        <field name="name">Approval: employees: follow required for follower-only approvals</field>
        <field name="model_id" ref="model_approval_approval"/>
        <field name="domain_force">['|',
            ('message_partner_ids', 'in', [user.partner_id.id]),
            ('owner_user_id.user_id', '=', user.id)
        ]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>

    </data>
</odoo>