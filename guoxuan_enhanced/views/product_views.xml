<odoo>
    <data>

        <record id="guoxuan_enhanced_product_search_form_view_sa" model="ir.ui.view">
            <field name="name">guoxuan_enhanced_product_search_form_view_sa</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="tangche_enhanced.product_search_form_view_sa"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='carriage']" position="replace">
                    <filter string="Battery Package" name="battery" domain="[('sa_type', '=', 'battery')]"/>
                </xpath>
                <xpath expr="//filter[@name='consu']" position="replace">
                </xpath>
            </field>
        </record>

        <record id="guoxuan_enhanced_product_product_action_battery" model="ir.actions.act_window">
            <field name="name">Battery Package</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="guoxuan_enhanced_product_search_form_view_sa"/>
            <field name="context">{'default_type':'product','default_tracking':
                'none','default_sa_type':'battery','search_default_battery': 1}
            </field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('sa_base.sa_product_product_tree_view')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('sa_base.sa_product_normal_form_view')})]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new battery package.
                </p>
                <p>
                    You must define a product for everything you sell, whether it's
                    a physical product, a consumable or a service you offer to
                    customers.
                </p>
                <p>
                    The product form contains information to simplify the sale
                    process: price, notes in the quotation, accounting data,
                    procurement methods, etc.
                </p>
            </field>
        </record>

        <menuitem id="sa_base.menu_mrp_vehicle_form"
                  name="Battery"
                  action="guoxuan_enhanced.guoxuan_enhanced_product_product_action_battery"
                  parent="sa_base.menu_product_form"/>
    </data>
</odoo>