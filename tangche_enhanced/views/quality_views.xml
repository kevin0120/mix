<odoo>
    <data>
        <record id="tangche_quality_point_view_form_inherit_mrp" model="ir.ui.view">
            <field name="name">tangche_quality_point_view_form_inherit_mrp</field>
            <field name="model">sa.quality.point</field>
            <field name="inherit_id" ref="quality.quality_point_view_form"/>
            <field name="arch" type="xml">
                <field name="sa_operation_ids" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <!--<field name="norm_unit" position="replace">-->

                <!--</field>-->
                <field name="program_id" position="replace">
                    <field name="tightening_tool_ids" widget="many2many_tags"
                           options="{'no_create': True, 'no_open':True}" attrs="{'invisible': [('test_type', '!=', 'promiscuous_tightening')]}"/>
                </field>

                <field name="component_id" position="attributes">
                    <attribute name="domain">[('sa_type', '=', 'consu'),('default_code', '!=', False)]</attribute>
                    <attribute name="context">
                        {'default_type':'consu','default_tracking':'none','default_sa_type':'consu','search_default_consu':
                        1}
                    </attribute>
                </field>

                <xpath expr="//field[@name='operation_point_ids']" position="attributes">
                    <attribute name="context">
                        {'default_parent_qcp_id': active_id, 'search_parent_step_ids': [active_id],
                        'default_parent_test_type': test_type, 'default_tightening_tool_ids': tightening_tool_ids}
                    </attribute>
                </xpath>
                <xpath expr="//page[@name='qcp_tightening_point']//field[@name='sequence']"
                       position="before">
                    <field name="parent_test_type" groups="base.group_no_one"/>
                </xpath>
                <xpath expr="//page[@name='qcp_tightening_point']"
                       position="attributes">
                    <attribute name="attrs">
                        {'invisible': [('test_type','not in',['promiscuous_tightening', 'tightening'])]}
                    </attribute>
                </xpath>
                <xpath expr="//page[@name='tightening_pic']"
                       position="attributes">
                    <attribute name="attrs">
                        {'invisible': [('test_type','not in',['promiscuous_tightening', 'tightening'])],
                        'required': [('test_type','in',['promiscuous_tightening', 'tightening'])]}
                    </attribute>
                </xpath>
                <xpath expr="//page[@name='qcp_tightening_point_group']"
                       position="attributes">
                    <attribute name="attrs">
                        {'invisible': [('test_type','not in',['promiscuous_tightening', 'tightening'])]}
                    </attribute>
                </xpath>

                <xpath expr="//page[@name='qcp_tightening_point']//field[@name='tightening_tool_ids']"
                       position="attributes">
                    <attribute name="attrs">{'invisible': [('parent_test_type','=','tightening')], 'required':
                        [('parent_test_type','=','promiscuous_tightening')]}
                    </attribute>
                </xpath>
                <xpath expr="//page[@name='qcp_tightening_point']//field[@name='product_id']"
                       position="after">
                    <field name="socket" options="{'no_create_edit': True,'no_open': True}"/>
                </xpath>
                <xpath expr="//page[@name='qcp_tightening_point']//field[@name='tool_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('parent_test_type','=','promiscuous_tightening')],
                        'required':
                        [('parent_test_type','=','tightening')]}
                    </attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>