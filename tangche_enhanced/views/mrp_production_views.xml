<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sa_mrp_production_form_inherit">
        <field name="name">tangche_mrp_production_form_inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[last()]" position="after">
                <button name="button_push_production"
                        attrs="{'invisible': ['|', ('state', 'in', ('draft', 'confirmed', 'cancel')), ('workorder_ids', '=', False)]}"
                        type="object" string="Download Workorders" class="oe_highlight"/>
            </xpath>

        </field>
    </record>

</odoo>
