# If you modify this, please also make sure to edit init.sh

[Unit]
Description=Time series data processing engine.
Documentation=https://github.com/masami10/aiis
After=network.target

[Service]
User=aiis
Group=aiis
LimitNOFILE=65536
EnvironmentFile=-/etc/default/aiis
ExecStart=/usr/bin/aiisd -config /etc/aiis/aiis.yaml $AIIS_OPTS
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
