<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sa_mrp_production_form_inherit">
        <field name="name">sa_mrp_production_form_inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_assign']" position="before">
                <button name="do_confirm" attrs="{'invisible': [('state', '!=', 'draft')]}" string="Dispatch Confirm"
                        type="object" class="oe_highlight"/>
            </xpath>
            <field name="date_planned_start_wo" position="attributes">
                <attribute name="attrs">{'readonly': [('dispatch_workorder_ids', '!=', [])]}</attribute>
            </field>
            <field name="date_planned_finished_wo" position="attributes">
                <attribute name="attrs">{'readonly': [('dispatch_workorder_ids', '!=', [])]}</attribute>
            </field>
            <field name="product_qty" position="attributes">
                <attribute name="attrs">{'readonly': True}</attribute>
            </field>
            <field name="product_uom_id" position="attributes">
                <attribute name="attrs">{'readonly': True}</attribute>
                <attribute name="groups">base.group_no_one</attribute>
            </field>
            <field name="routing_id" position="attributes">
                <attribute name="attrs">{'required': True}</attribute>
            </field>
            <xpath expr="//button[@name='%(mrp.action_change_production_qty)d']" position="replace">

            </xpath>
            <field name="product_id" position="after">
                <field name="track_no" string="Finished Product Serial Number" attrs="{'readonly': [('state', '!=', 'draft')]}" required="1"/>
            </field>
            <xpath expr="//button[@name='button_plan']" position="replace">
                <button name="button_plan_by_dispatching" attrs="{'invisible': ['|', ('state', '!=', 'confirmed'), ('dispatch_workorder_ids', '=', False)]}" type="object" string="Create Workorders" class="oe_highlight"/>
            </xpath>
            <xpath expr="//notebook/page[1]" position="replace">
                <page string="Dispatch Work Orders">
                    <field name="dispatch_workorder_ids" options="{'reload_on_button': True}"
                           context="{'default_routing_id': routing_id}">
                        <tree editable="bottom" delete="0" default_order="is_dispatched desc,sequence"
                              decoration-success="is_dispatched"
                              decoration-danger="not is_dispatched" create="0">
                            <field name="is_dispatched" invisible="1"/>
                            <field name="sequence" invisible="1"/>
                            <field name="workcenter_ids" groups="base.group_no_one" readonly="1"
                                   widget="many2many_tags"/>
                            <field name="operation_workcenter_domain" invisible="1"/>
                            <field name="workcenter_id" domain="operation_workcenter_domain"
                                   options="{'no_create_edit': True,'no_open': True}"
                                   attrs="{'readonly': ['|', ('is_dispatched', '=', True),('workcenter_ids', '=', False)],
                                    'required': [('is_dispatched', '=', False),('workcenter_ids', '!=', False)]}"/>
                            <field name="user_id" domain="[('id', 'in', workcenter_id.user_ids.ids)]"
                                   attrs="{'readonly': [('is_dispatched', '=', True)]}"/>
                            <field name="routing_id" readonly="1"/>
                            <field name="workorder_id" groups="base.group_no_one" readonly="1"/>
                            <field name="operation_id" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <field name="product_id" position="before">
                <field name="assembly_line_id" required="1" options="{'no_create_edit': True}"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="sa_mrp_production_filter_inherit">
        <field name="name">sa_mrp_production_filter_inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='name'][1]" position="replace">
                <field name="name" string="Production" filter_domain="['|','|', ('name','ilike',self),('origin','ilike',self),('track_no', 'ilike', self)]"/>
            </xpath>
            <xpath expr="//filter[@name='todo']" position="before">
                <filter string="Draft" name="draft" domain="[('state','=', 'draft')]"
                        help="Manufacturing Orders which are in draft state."/>
            </xpath>
            <field name="move_raw_ids" position="replace">
                <field name="name" string="Track Number" filter_domain="[('track_no', 'ilike', self)]"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="sa_mrp_production_tree_inherit">
        <field name="name">sa_mrp_production_tree_inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <field name="availability" position="replace">
                <field name="track_no" />
            </field>
        </field>
    </record>

    <record id="mrp.production_order_server_action" model="ir.actions.server">
        <field name="name">Plan Orders By Dispatching</field>
        <field name="code">records.button_plan_by_dispatching()</field>
    </record>


</odoo>