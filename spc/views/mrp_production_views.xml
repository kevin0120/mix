<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sa_mrp_production_form_inherit">
        <field name="name">sa_mrp_production_form_inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button string="SPC" name="action_see_spc_control" type="object" icon="fa-bars" class="oe_stat_button" groups="spc.group_spc_user, spc.group_spc_manager"/>
                </xpath>
            <xpath expr="//notebook[1]" position="replace">
                <notebook>
                    <page string="Results">
                        <field name="result_ids" options="{'reload_on_button': True}" >
                            <tree delete="0" create="0">
                                <field name="consu_product_id" />
                                <field name="control_date" />
                                <field name="measure_torque" />
                                <field name="measure_degree" />
                                <field name="measure_result" />
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</odoo>