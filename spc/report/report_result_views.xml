<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_result_tighting">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page">
                        <h2>
                        拧紧结果报告
                        </h2>
                        <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th><strong>Date</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-esc="get_day"/>
                                </td>
                            </tr>
                        </tbody>
                        </table>
                        <table class="table table-condensed"  >
                            <thead>
                                <tr>
                                    <th><strong>VIN</strong></th>
                                    <!--<th class="text-right"><strong>Quantity</strong></th>-->
                                </tr>
                            </thead>
                            <tr t-foreach="docs" t-as="line">
                                <td>
                                    <span t-esc="line[0]['name']"/>
                                </td>
                                <td t-if="line[0]['lines']">
                                    <table class="table table-condensed" t-if="line[0]['lines']">
                                        <thead>
                                            <tr>
                                                <th><strong>拧紧时间</strong></th>
                                                <th><strong>Job号</strong></th>
                                                <th><strong>结果</strong></th>
                                            </tr>
                                        </thead>
                                        <tr t-foreach="line[0]['lines']" t-as="result">
                                            <td><span t-field="result.control_date"/></td>
                                            <td><span t-esc="1"/></td>
                                            <td><span t-field="result.measure_result"/></td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                            </tr>
                        </table>
