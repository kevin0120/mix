<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sanyi_enhanced_mrp_workcenter_form_view_inherit" model="ir.ui.view">
            <field name="name">sanyi_enhanced_mrp_workcenter_form_view_inherit</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="sa_base.sa_mrp_workcenter_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_sync_operations']" position="after">
                    <button string="Sync Work Center Info" type="object" name="button_sync_workcenter"
                            class="oe_highlight"/>
                </xpath>

                <xpath expr="//field[@name='qc_workcenter_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('type','=','rework')], 'required':
                        [('type','=','operate')]}</attribute>
                </xpath>
            </field>

        </record>

    </data>
</odoo>